#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/ypset,v 1.5 2003/07/09 03:21:03 mtm Exp $
#

# PROVIDE: ypset
# REQUIRE: rpcbind ypbind

. /etc/rc.subr

name="ypset"
rcvar="nis_ypset_enable"
command="/usr/sbin/${name}"
start_precmd="ypset_precmd"

ypset_precmd()
{
	if ! checkyesno rpcbind_enable  && \
	   ! /etc/rc.d/rpcbind forcestatus >/dev/null 2>&1
	then
		force_depend rpcbind || return 1
	fi
	if ! checkyesno nis_client_enable && \
	   ! /etc/rc.d/ypbind forcestatus >/dev/null 2>&1
	then
		force_depend ypbind || return 1
	fi

	_domain=`domainname`
	if [ -z "$_domain" ]; then
		warn "NIS domainname(1) is not set."
		return 1
	fi
}

load_rc_config $name
command_args="${nis_ypset_flags}"

run_rc_command "$1"

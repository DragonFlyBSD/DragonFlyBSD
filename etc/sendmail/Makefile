# This installs the sendmail mc templates and the makefile used to
# generate sendmail.cf and sendmail.submit.cf.  A README is also installed

FILESDIR=	/etc/mail
FILESMODE=	644

FILES+=		Makefile.4install \
		README \
		dragonfly.mc \
		dragonfly.submit.mc
FILESNAME_Makefile.4install=Makefile

.include <bsd.prog.mk>
